<h1>List of users</h1>

<form action="/insert_user" method="post">
  <label for="username_field">Username</label>

  <input id="username_field" name="query_username" type="text" />

  <button type="submit">Add user</button>
</form>

<table border ="1">
  <tr>
      <th>
      ID
      </th>
     
      <th>
      Username
      </th>

      <th>
      
      </th>
  
  
  
  </tr>

  <% @list_of_users.each do | a_user | %>
    <tr>

      <td>
      <%= a_user.id %>
      </td>
      <td>
      <%= a_user.username %>
      </td>
      <td>
      <a href="/users/<%= a_user.username %>"></a>
      Show details
      </td>

    </tr>

  <% end %>

</table>
