<h1><%= @the_user.username %></h1>

<dl>
  <dt>
  ID
  </dt>
  <dd>
  <%= @the_user.id %>
  </dd>
  <dt>
  Edit user
  </dt>
  <dd>
  <form action="/update_user/<%= @the_user.id %>" method="post">
  <label for="username_field">Username</label>
  <input id="username_field" name="query_username" type="text" value="<%= @the_user.username %>">

  <button type="submit">Update user</button>
</form>

  </dd>

</dl>

<h2>Own photos (<%= @the_user.own_photos.size %>)</h2>

<table border ="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @the_user.own_photos.each do | a_photo | %>
  <tr>
    
    <td><img src="<%= a_photo.image %>" alt=""></td>
    <td>
    <%= a_photo.poster.username %>
    <%#= User.where({ :id => a_photo.owner_id}).at(0).username %></td>

    
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %></td>
 
    <td>Show details</td>
  </tr>
  <% end %>
</table>
